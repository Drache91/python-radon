{
	"name": "python-radon",
	"displayName": "python-radon",
	"description": "Checks the python code complexity with radon",
	"version": "1.0.2",
	"author": {
		"email": "christian.dein@dein-hosting.de",
		"name": "Christian Dein"
	},
	"license": "MIT",
	"publisher": "ChristianDein",
	"repository": {
		"url": "https://github.com/cdein/python-radon.git",
		"type": "git"
	},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"icon": "complexity.png",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"title": "Radon Enable",
				"command": "python.radon.enable",
				"category": "Python"
			},
			{
				"title": "Radon Disable",
				"command": "python.radon.disable",
				"category": "Python"
			}
		],
		"configuration": {
			"properties": {
				"python.radon.enable": {
					"type": "boolean",
					"default": true
				},
				"python.radon.executable": {
					"type": "string",
					"default": "radon"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}